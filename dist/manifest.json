{
  "manifest_version": 2,

  "name": "Baraholka search optimizer",
  "description": "Baraholka search optimizer",
  "version": "1.0",

  "browser_action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
      {
          "matches": ["https://baraholka.onliner.by/*"],
          "js": ["js/vendor.js", "js/content_script.js"]
      }
  ],

  "background": {
    "scripts": ["js/vendor.js", "js/background.js"]
  },

  "permissions": [
    "storage",
    "https://baraholka.onliner.by/*"
  ]
}